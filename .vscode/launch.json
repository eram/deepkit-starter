{
    "version": "0.2.0",
    "configurations": [
       {
            "name": "Debug Current Test File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**"
            ],
            "sourceMaps": true,
            "console": "integratedTerminal"
        },
    ],
}
